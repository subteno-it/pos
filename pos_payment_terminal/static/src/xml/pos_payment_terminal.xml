<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="PaymentScreen-Paymentlines" >
        <t t-jquery="thead>tr>th:last-child" t-operation="append">
            <th>Actions</th>
        </t>
        <t t-jquery=".delete-button" t-operation="append">
            <td class="col-action">
                <t t-if="line.payment_method.pos_terminal_payment_mode == 'card' and widget.pos.config.iface_payment_terminal">
                   <button class="payment-terminal-transaction-start"  t-att-data-cid='line.cid'>Start transaction</button>
                </t>
            </td>
        </t>
    </t>
</templates>
